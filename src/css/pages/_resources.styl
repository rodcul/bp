	.resource__learnmore
		margin-top 5px
		a
			color #40a8de
			font-size 12px
			font-weight 700
			text-transform uppercase
		a:focus, a:active, a:hover
			color #68bfec
		span
			color #40a8de
			font-size 12px
			font-weight 700
			text-transform uppercase
		span:focus, span:active, span:hover
