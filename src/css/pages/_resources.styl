	+below(8)
		span(1/2)
		float none
		display table-cell
		vertical-align top
	+below(5)
		span(1/1)
.list--recent--news .recent--news--resource .resource__header
	+below(5)
		height 100% !important
.list--recent--news .recent--news--resource .resource__image
	+below(8)
		border-bottom 1px solid #ddd
		border-right none
	+below(5)
		border-right 1px solid #ddd
		border-bottom none
		height 100% !important
		background-image none !important
	img
		opacity 1
		width 100%
		height auto !important
