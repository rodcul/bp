			height 100%
			display block
		+below(7)
			margin 0 15px
		+below(5)
			margin 0
			width 100%
	.resource__image
		background-position center
		background-size cover
		background-repeat no-repeat
		border 1px solid bp-xs-gray
		border-bottom none
		display block
		&.resourcespage
			height auto
			img
