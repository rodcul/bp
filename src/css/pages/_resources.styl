//=============================================
//	Resource List
//=============================================
.threeItemClearfix
	+below(11)
		display none
.twoItemClearfix
	display none
	+below(11)
		display block
.resources--list--section
	padding 33px 0 220px
.resource--list--section__row
	margin 0 -15px
	+below(11)
		margin 0 -10px
	+below(8)
		margin 0
.list--resources
	span(3/4)
	color bp-l-gray
	+below(11)
		span(2/3)
	+below(8)
		span(1/1)
.promotion--resources
	color bp-l-gray
	span(1/4)
	+below(11)
		span(1/3)
	+below(8)
		span(1/1)
		margin-top 55px
.resource, .recent--news--resource
	span(1/3)
	margin-bottom 30px
	+below(11)
		span(1/2)
		margin-bottom 20px
	+below(8)
