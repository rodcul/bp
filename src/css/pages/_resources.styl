	margin 0
	.resource__body
		padding 10px 20px 25px
		background-color white
		+below(8)
			padding 20px 20px 25px
			//height 179px
			overflow hidden
	.resource__excerpt
		min-height 78px
//=============================================
//	Press Coverages List
//=============================================
.resources--press--coverages
	padding 70px 0 220px
	+below(8)
		padding 70px 0 120px
.press--coverages--header
	text-align center
	margin-bottom 70px
	.carousel__line
		margin-bottom 35px
	.carousel__line:before
		background-color #fbb116
	h2
		color #505050
		font-size 38px
		font-weight 300
		line-height 35px
.list--press--coverages
	.twoItemClearfix
		display block
	.press
		span(1/2)
		padding 0 12px
		margin-bottom 24px
		max-height 245px
		overflow hidden
		+below(8)
			span(1/1)
			margin-bottom 30px
	.press.press-hidden
		display none
	.press__container
		display block
		border-left 11px solid #40a8de
		background-color #312e2c
		padding 5px 30px 40px 40px
		color white
	.press__title
		height 90px
		margin-bottom 0
		+below(5)
			-webkit-background-size cover !important
			-moz-background-size cover !important
			-o-background-size cover !important
			background-size cover !important
			height auto
			max-height 60px
			min-height 60px
			overflow hidden
			width 100% !important
	.press__title img
		max-width 100%
		height auto
		margin-bottom 0
		opacity 0
	.press__excerpt
		font-size 16px
		font-weight 400
		line-height 27px
		margin-bottom 5px
		height 81px
		overflow hidden
	.press__date
		margin-top 10px
		font-size 14px
		font-weight 700
.list--press__seemore
	text-align center
	width 100%
	margin-top 46px
	+below(8)
		margin-top 95px
	.list--press__seemore--btn
		color bp-xs-blue
		font-size 14px
		font-weight 700
		text-transform uppercase
		display inline-block
		border 2px solid bp-xs-blue
		border-radius 3px
		padding 10px 5px
		cursor pointer
		width 130px
		text-align center
		transition all .2s linear 0s
		&:hover, &:active, &:focus
			color #47bdfb
			border-color #47bdfb

.no-resources-found
	text-align center
	margin-top 82px
	margin-bottom 120px
	font-size 14px
	color #aeaeae
	b
		display block
		text-transform uppercase
		margin-top 22px
	path
		fill #aeaeae
.resources-searching
	text-align center
	margin-top 82px
	margin-bottom 120px
	color #aeaeae
	path
		fill #aeaeae
	.searching-text
		text-transform uppercase
		font-size 18px
		font-weight bold
		margin-top 10px
		span
			opacity 1
			animation resourceSearchsAnimation 2s ease infinite
		span:nth-child(2)
			animation-delay .5s
		span:nth-child(3)
			animation-delay 1s
		span:nth-child(4)
			animation-delay 1.5s

//searching Animation
@keyframes resourceSearchsAnimation {
  0% {
    opacity: 0;
    transform: scale(1);
  }
  25% {
  	transform: scale(2);
    opacity: 1;
  }
  75%{
  	transform: scale(2);
  	opacity: 1;
  }
  100%{
  	transform: scale(1);
  	opacity: 0;
  }
}



