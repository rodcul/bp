//Thank you

.thankyou--page
	background-color #0f2942
	display table
	width 100%
	height 100vh
	+below(8)
		position absolute
		top 0
		left 0
	.thankyou--content--body
		background-color white
		width 422px
		display inline-block
		padding 98px 0 109px
		position relative
		border-radius 3px
		+below(5)
			width 100%
			padding 98px 15px 109px
		&:before
			content: '';
			width 60px
			height 10px
			display inline-block
			position absolute
			top 0
			left 0
			right 0
			margin 0 auto
			background-color #acc537
	.thankyou--content
		display table-cell
		width 100%
		height 100%
		vertical-align middle
		text-align center

	.thankyou--text
		color #505050
		font-size 14px
		margin-top 30px
		margin-bottom 30px
		b
			font-size 21px
			font-weight 700
			text-transform uppercase
			display block
			margin-bottom 8px
		p
			line-height 24px
			letter-spacing 0.3px
	.thankyou--stripline
		background-color #f0453b
		size 60px 11px
		display inline-block
	.thankyou--link
		margin-top 35px
		a
			color white
			font-size 14px
			font-weight 600
			width 184px
			border-radius 3px
			display inline-block
			padding 13px 0
			transition all .2s linear 0s;
			text-transform uppercase
			background-color #40a8de
			&:hover
				background #47bdfb
			&:active
				background #3594c5