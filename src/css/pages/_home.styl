	display none
	position relative
	size 100% auto
	padding-top 116px
	padding-left 15px
	padding-right 15px
	background: colors.home-section-alert-correlation
	border-top: 1px solid colors.home-section-alert-correlation-border

	&:before
		content ' '
		absolute 70px 0 0 0
		size 69px 11px
		background: colors.home-section-alert-correlation-monolith
		margin 0 auto

	+above(7)
		display block

