	size 100% auto
	background-color: colors.home-section-testimonials
	+above(11)
		padding 110px 0 118px 0
		background: colors.home-section-testimonials
		border: 1px solid colors.home-section-testimonials-border
	+below(8)
		padding 110px 0 0 0
	&:before
		content ' '
		absolute 70px 0 0 0
		size 69px 11px
		background: colors.home-section-testimonials-monolith
		margin 0 auto
