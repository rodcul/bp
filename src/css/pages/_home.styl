// home page section component

.home-section
	padding 70px 0 120px

.home-section--solutions
	padding 116px 15px 120px
	background: colors.home-section-solutions
	+below(11)
		padding 45px 15px 120px
		.solutions.solutions--home
			max-width 740px
			margin 0 auto
			.solution--alert-correlation:nth-child(1)
				padding 0 70px 0 0
				margin-right 0
				margin-bottom 80px
				.title--solution
					margin-bottom 10px
			.solution--alert-correlation:nth-child(2)
				padding 0 0 0 70px
				margin-bottom 80px
				.title--solution
					margin-bottom 10px
				+below(6)
					padding-left 0
			.solution--alert-correlation:nth-child(3)
				padding 0 70px 0 0
				margin-right 0
				margin-bottom 80px
				.title--solution
					margin-bottom 10px
				+below(6)
					padding-right 0
			.solution--alert-correlation:nth-child(4)
				padding 0 0 0 70px
				.title--solution
					margin-bottom 10px
				+below(6)
					padding-left 0
					margin-bottom 80px
	+below(6)
		padding 45px 15px 20px
		.solutions.solutions--home
			width 100%
			.solution--alert-correlation:nth-child(1)
				padding-right 0
			.solution--alert-correlation:nth-child(2)
				padding-left 0
			.solution--alert-correlation:nth-child(3)
				padding-right 0
			.solution--alert-correlation:nth-child(4)
				padding-left 0

