// Sitemap
.sitemap__section
	cf()
	padding:70px 0 110px 0
	+below(12)
		width:94%;
		margin:0 3%;
	+below(8)
		padding 0
	h1
		color #505050
		font-size 36px
		line-height 44px
		margin-bottom 30px
		margin-top 0
	h2
		color #505050
		font-size 24px
		line-height 32px
		margin-bottom 24px
		margin-top 0
	h3
		color #505050
		font-size 20px
		line-height 26px
		margin-bottom 20px
		margin-top 0
	h4
		color #505050
		font-size 18px
		line-height 24px
		margin-bottom 18px
		margin-top 0
	h5
		color #505050
		font-size 16px
		line-height 22px
		margin-bottom 14px
		margin-top 0
	h6
		color #505050
		font-size 14px
		line-height 20px
		margin-bottom 10px
		margin-top 0
	p
		color #505050
		font-size 14px
		line-height 20px
		margin-bottom 15px
	ul
		margin-bottom 15px
		li
			list-style disc inside none
			margin-bottom 5px
	ol
		margin-bottom 15px
		li
			list-style dec inside none
			margin-bottom 5px