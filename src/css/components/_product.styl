// products components

// products section on home

.products
	cf()
	padding 0 45px
	+above(11)
		padding 0
	+below(4)
		padding 0 15px

// product-info component

.product-info
	display block

.product-info--container
	col(1/3, uncycle: 2, cycle:3)

	text-align center !important
	background-position center top
	background-repeat no-repeat
	.product-info--image-container
		text-align center
		size 100% 127px
		+below(6)
			height auto
		+below(11)
			height 120px
	svg
		width 102px
		height 80px
		display inline-block
		margin-bottom 20px

	.title--product-info
		margin-bottom 10px

	+below(11)
		col(1/2, uncycle: 2, cycle:2)
		margin-bottom 30px
		padding 0 6%
		&:nth-child(2n)
			display none
		&:nth-child(2n+1)
			clear none !important
	+below(6)
		col(1/1)
.product-info--understand
	+below(11)
		&:nth-child(3n)
			width: 100%
			margin-top: 30px
			.product-info__desc
				width: 225px
				margin: 0 auto
				margin-bottom: 15px
		&:nth-child(2n)
			display block !important

.product-info__desc
	margin-bottom 15px
	color: colors.product-info-description-color
	font-weight 400
	line-height 19px
	margin-top -3px
	+above(11)
		font-size: fontSizes.product-info-description
		margin-top 0
		margin-bottom 13px
		line-height 24px

.product-info__anchor
	position relative
	color: colors.product-info-anchor
	font-weight 700
	text-transform uppercase
	+below(6)
		margin-right 0
	+above(11)
		font-size: fontSizes.product-info-anchor

	&:after
		absolute 1px -20px false false
		font-size: fontSizes.product-info-anchor-after
		font-weight bold

	&:hover
		color: colors.product-info-anchor-hover

	&:active
		color: colors.product-info-anchor-active
