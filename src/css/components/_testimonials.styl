// testimonials component

.custumer-success__content
	text-align center
	color bp-m-gray

.custumer-success__section
	cf()
	margin 0
	+below(12)
		margin 0

.custumer-success__box
	span(1/3)
	text-align center
	color bp-m-gray

	+below(9)
		padding 0 15px

	+below(8)
		padding 0 5px

	+below(7)
		col(1/1, cycle: 1)
		text-align center
		margin-bottom 34px
	+below(14)
		padding 0 30px
	+above(14)
		padding 0 47px

.custumer-success__image
	margin-bottom 24px

	+above(11)
		margin-bottom 24px

.custumer-success__img
	border-radius 50%
	size 89px
	margin 0 auto

	+above(11)
		size auto

.custumer-success__testimony
		font-size: fontSizes.testimony-description
		line-height 27px
		margin 0 0 20px 0
		display inline-block
		height 160px
		overflow hidden
		padding 0 17px
.custumer-success__testimony
	+below(14)
		width 100%
	+below(11)
		color: colors.testimony-description
		font-size: fontSizes.testimony-description-s
		font-weight 400
		line-height 21px
		margin 0 0 17px 0
.custumer-success__plic
	font-style italic

.custumer-success__author
	color: colors.testimony-author
	font-size xxs-font-size
	font-weight 400
	line-height 24px

	+above(11)
		font-size 15px

.custumer-success__role
	color: colors.testimony-author-role
	font-size xxs-font-size
	font-weight 700
	line-height 24px
	margin-top -4px

	+above(11)
		font-size 15px
		margin 0
