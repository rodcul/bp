.header--fixed
	.extra
		//margin-top 2px !important
.extra__nav
	display inline-block
	margin 10px 15px 10px 0
	padding 6px 0
	text-align right
	+below(12)
		margin-right 8px
	+below(1024px)
		display none
	.extra_anchor__right
		margin-right 1px
	span
		font-size  9px
		position relative
		top -1px
		left -1px

.extra__anchor
	position relative
	margin 0 1px
	color: colors.extra-anchor-color
	font-size: fontSizes.extra-anchor
	
	&.contacts
		margin-right 5px
	
	span
		font-size 8px
		position relative
		top -3px

	&:hover
		color: colors.extra-anchor-hover
		border-bottom: 1px solid colors.extra-anchor-border

.extra__trial
